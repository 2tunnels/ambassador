{
    "admin":{
        "access_log_path":"/tmp/admin_access_log",
        "address":"tcp://127.0.0.1:8001"
    },
    "cluster_manager":{
        "clusters":[
            {
                "connect_timeout_ms":250,
                "hosts":[
                    {
                        "url":"tcp://127.0.0.1:8877"
                    }
                ],
                "lb_type":"round_robin",
                "name":"cluster_127_0_0_1_8877",
                "type":"strict_dns"
            },
            {
                "connect_timeout_ms":250,
                "hosts":[
                    {
                        "url":"tcp://demo.getambassador.io:80"
                    }
                ],
                "lb_type":"round_robin",
                "name":"cluster_demo_getambassador_io",
                "type":"strict_dns"
            },
            {
                "connect_timeout_ms":250,
                "hosts":[
                    {
                        "url":"tcp://demo.getambassador.io:80"
                    }
                ],
                "lb_type":"random",
                "name":"cluster_ext_auth",
                "type":"logical_dns"
            },
            {
                "connect_timeout_ms":250,
                "hosts":[
                    {
                        "url":"tcp://httpbin.org:80"
                    }
                ],
                "lb_type":"round_robin",
                "name":"cluster_httpbin_org_80",
                "type":"strict_dns"
            }
        ]
    },
    "listeners":[
        {
            "address":"tcp://0.0.0.0:80",
            "filters":[
                {
                    "config":{
                        "access_log":[
                            {
                                "path":"/tmp/access_log"
                            }
                        ],
                        "codec_type":"auto",
                        "filters":[
                            {
                                "config":{
                                    "allowed_headers":[
                                        "x-extauth-required",
                                        "x-authenticated-as",
                                        "x-qotm-session"
                                    ],
                                    "cluster":"cluster_ext_auth",
                                    "path_prefix":"/auth/v0",
                                    "timeout_ms":5000
                                },
                                "name":"extauth",
                                "type":"decoder"
                            },
                            {
                                "config":{},
                                "name":"router",
                                "type":"decoder"
                            }
                        ],
                        "route_config":{
                            "virtual_hosts":[
                                {
                                    "domains":[
                                        "*"
                                    ],
                                    "name":"backend",
                                    "routes":[
                                        {
                                            "cluster":"cluster_127_0_0_1_8877",
                                            "prefix":"/ambassador/v0/check_ready",
                                            "prefix_rewrite":"/ambassador/v0/check_ready",
                                            "timeout_ms":500
                                        },
                                        {
                                            "cluster":"cluster_127_0_0_1_8877",
                                            "prefix":"/ambassador/v0/check_alive",
                                            "prefix_rewrite":"/ambassador/v0/check_alive",
                                            "timeout_ms":500
                                        },
                                        {
                                            "cluster":"cluster_127_0_0_1_8877",
                                            "prefix":"/ambassador/",
                                            "prefix_rewrite":"/ambassador/",
                                            "timeout_ms":500
                                        },
                                        {
                                            "cluster":"cluster_httpbin_org_80",
                                            "host_rewrite":"httpbin.org",
                                            "prefix":"/httpbin/",
                                            "prefix_rewrite":"/",
                                            "timeout_ms":500
                                        },
                                        {
                                            "cluster":"cluster_demo_getambassador_io",
                                            "prefix":"/qotm/",
                                            "prefix_rewrite":"/qotm/",
                                            "timeout_ms":500
                                        },
                                        {
                                            "cluster":"cluster_demo_getambassador_io",
                                            "headers":[
                                                {
                                                    "name":":method",
                                                    "regex":false,
                                                    "value":"PUT"
                                                }
                                            ],
                                            "prefix":"/cqrs/",
                                            "prefix_rewrite":"/qotm/quote/",
                                            "timeout_ms":500
                                        },
                                        {
                                            "cluster":"cluster_demo_getambassador_io",
                                            "headers":[
                                                {
                                                    "name":":method",
                                                    "regex":false,
                                                    "value":"GET"
                                                }
                                            ],
                                            "prefix":"/cqrs/",
                                            "prefix_rewrite":"/qotm/quote/",
                                            "timeout_ms":500
                                        }
                                    ]
                                }
                            ]
                        },
                        "stat_prefix":"ingress_http"
                    },
                    "name":"http_connection_manager",
                    "type":"read"
                }
            ]
        }
    ],
    "stats_flush_interval_ms":1000,
    "statsd_udp_ip_address":"127.0.0.1:8125"
}
